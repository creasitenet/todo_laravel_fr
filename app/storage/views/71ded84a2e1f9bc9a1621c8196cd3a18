
<div id="alertes">

	<?php if ($errors->any()): ?>
	<div class="alert alert-danger alert-block">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<strong><?php echo Lang::get('notifications.title.error'); ?></strong>
		<?php echo Lang::get('notifications.any-error-message'); ?>
	</div>
	<?php endif; ?>

	<?php if(Session::has('error')): ?>
	<div class="alert alert-danger alert-block">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<strong><?php echo Lang::get('notifications.title.error'); ?> !</strong>
		<?php echo Session::get('error'); ?>
	</div>
	<?php endif; ?>

	<?php if(Session::has('success')): ?>
	<div class="alert alert-success alert-block">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<strong><?php echo Lang::get('notifications.title.success'); ?> !</strong>
		<?php echo Session::get('success'); ?>
	</div>
	<?php endif; ?>


	<?php if(Session::has('warning')): ?>
	<div class="alert alert-warning alert-block">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<h4><?php echo Lang::get('notifications.title.warning'); ?></h4>
		<?php echo Session::get('warning'); ?>
	</div>
	<?php endif; ?>

	<?php if(Session::has('info')): ?>
	<div class="alert alert-info alert-block">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<h4><?php echo Lang::get('notifications.title.info'); ?></h4>
		<?php echo Session::get('info'); ?>
	</div>
	<?php endif; ?>

</div>
